{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/book_json/**/(!manifest).json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31456000 immutable"
          }
        ]
      },
      {
        "source": "/book_json/**/manifest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}
